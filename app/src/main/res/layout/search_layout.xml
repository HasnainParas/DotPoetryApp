<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    android:background="@drawable/ripple_effect"
    android:elevation="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/searchCircleIV"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/logo"
        app:civ_border_color="@color/appColor"
        app:civ_border_width="5dp"
        app:civ_circle_background_color="#E6E6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchPoetName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ripple_effect"
        android:elevation="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center|start"
        android:paddingStart="10dp"
        android:text="Mirza Ghalib"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/searchCircleIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchCircleIV"
        app:layout_constraintTop_toTopOf="@+id/searchCircleIV" />

