<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">


    <LinearLayout
        android:id="@+id/forUploadingPoetrys"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_for_image"
        android:clickable="true"
        android:elevation="30dp"
        android:focusable="true"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/upload" />

        <TextView
            android:id="@+id/uploadTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="Upload Poetry"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forAddingPoets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_for_image"
        android:clickable="true"
        android:elevation="30dp"
        android:focusable="true"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@+id/forUploadingPoetrys"
        app:layout_constraintStart_toStartOf="@+id/forUploadingPoetrys"
        app:layout_constraintTop_toBottomOf="@+id/forUploadingPoetrys">

        <ImageView
            android:id="@+id/addingImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/addpoets" />


        <TextView
            android:id="@+id/addingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="Add Poets"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_for_image"
        android:clickable="true"
        android:elevation="30dp"
        android:focusable="true"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@+id/forAddingPoets"
        app:layout_constraintStart_toStartOf="@+id/forAddingPoets"
        app:layout_constraintTop_toBottomOf="@+id/forAddingPoets">

        <ImageView
            android:id="@+id/sliderImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/sliderbtn" />


        <TextView
            android:id="@+id/sliderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="Setup Slider"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>