<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.AddingPoetsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addedimageV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ripple_for_image"
        android:padding="5dp"
        android:src="@drawable/persongroup"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageaddingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/ripple_for_image"
        android:contentDescription="@string/app_name"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addedimageV"
        app:srcCompat="@drawable/ic_pic_add" />

    <EditText
        android:id="@+id/poetname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_border"
        android:elevation="20dp"
        android:ems="10"
        android:hint="Poeter Name"
        android:minHeight="60dp"
        android:minLines="1"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageaddingBtn" />

    <EditText
        android:id="@+id/poetAgeStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_border"
        android:elevation="20dp"
        android:ems="10"
        android:hint="Age Start"
        android:inputType="number|textPersonName"
        android:minHeight="60dp"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poetname" />

    <EditText
        android:id="@+id/poetAgeEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_border"
        android:elevation="20dp"
        android:ems="10"
        android:hint="Age End"
        android:inputType="number|textPersonName"
        android:minHeight="60dp"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poetAgeStart" />

    <TextView
        android:id="@+id/submitbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ripple_effect_for_btn"
        android:elevation="30dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/submit_btn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/poetAgeEnd"
        app:layout_constraintStart_toStartOf="@+id/poetAgeEnd"
        app:layout_constraintTop_toBottomOf="@+id/poetAgeEnd" />

    <TextView
        android:id="@+id/add_poets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/ripple_effect_for_btn"
        android:elevation="30dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Add Poetry"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/submitbtn"
        app:layout_constraintStart_toStartOf="@+id/submitbtn"
        app:layout_constraintTop_toBottomOf="@+id/submitbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>